<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liteon.waterlevelalert.WaterAlertActivity" >

	<ImageView 
	   android:layout_width="match_parent"
	   android:layout_height="match_parent"
	   android:background="#FFFFFFFF"
	   />

	<FrameLayout
	    android:id="@+id/alert_frame"
	   	android:layout_width="386dp"
	    android:layout_height="388dp"
	    android:layout_centerInParent="true">
	   <ImageView
	       	android:id="@+id/warning" 
	   		android:layout_width="match_parent"
	   		android:layout_height="match_parent"
	   		android:background="#FFFF0000"
	   		android:visibility="invisible"
	   />
	   <ImageView 
	        android:id="@+id/secondary_alert"
	   		android:layout_width="match_parent"
	   		android:layout_height="match_parent"
	   		android:background="#FF00FF00"
	   		android:visibility="invisible"
	   />
	   <ImageView 
	       	android:id="@+id/thirdary_alert"
	   		android:layout_width="match_parent"
	   		android:layout_height="match_parent"
	   		android:background="#FF0000FF"
	   		android:visibility="invisible"
	   />
	</FrameLayout>
	<TextView 
	    android:id="@+id/alert_status"
	    android:layout_below="@id/alert_frame"
	    android:textSize="36sp"
	    android:layout_centerHorizontal="true"
	    android:layout_width="410dp"
	    android:layout_height="50dp"/>
	
	<LinearLayout 
	    android:id="@+id/gps"
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="64dp"
	    android:layout_alignParentBottom="true"
	    android:background="#FFF09825">
	    <TextView 
	        android:layout_width="221dp"
	        android:layout_height="64dp"
	        android:text="GPS:"
	        android:textAlignment="center"/>
	    <TextView 
	        android:id="@+id/gps_data"
	        android:layout_width="221dp"
	        android:layout_height="64dp"
	        android:text="47.1312435 ; 2.141413213"
	        android:textAlignment="viewStart"
	        android:layout_gravity="start"/>
	  </LinearLayout>  

	<ImageView
	    android:id="@+id/line"
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:layout_above="@id/gps"
	    android:background="#FFFFFFFF"/>
		
		<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="64dp"
	    android:layout_above="@id/line"
	    android:background="#FFF09825">
	    <TextView 
	        android:layout_width="221dp"
	        android:layout_height="64dp"
	        android:text="Pole ID:"
	        android:textAlignment="center"/>
	    <TextView 
	      	android:id="@+id/pole_id"
	        android:layout_width="221dp"
	        android:layout_height="64dp"
	        android:text="E222123"
	        android:textAlignment="viewStart"
	        android:layout_gravity="start"/>
	  </LinearLayout>
</RelativeLayout>
